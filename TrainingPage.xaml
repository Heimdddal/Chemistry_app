<Page x:Class="Chemistry_app.TrainingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chemistry_app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainingPage">

    <Grid x:Name="TrainingGrid">
        <StackPanel x:Name="TrainingStackPanel">
            <Slider x:Name="sld"
                            Maximum="37"
                            Minimum="1"
                            Value="18"
                            HorizontalAlignment="Left"
                            MinWidth="280"
                            IsSnapToTickEnabled = "True"
                            TickFrequency = "1"
                            Panel.ZIndex="2"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            ></Slider>
        <TextBlock Text="{Binding ElementName=sld, Path=Value, Mode=TwoWay}"
                               x:Name="textBoxAge"
                                FontSize="40"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"/>
        <Button x:Name="StartTrainig" Click="StartTrainig_Click"/>
        </StackPanel>
    </Grid>
</Page>
