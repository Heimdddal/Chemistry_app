<Window x:Class="Chemistry_app.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemasc:\users\emil\source\repos\chemistry_app\registrationwindow.xaml
c:\users\emil\source\repos\chemistry_app\registrationwindow.xaml.cs
.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry_app"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="600" Width="400" Background="#242424" Foreground="White" FontSize="19">
    <Grid>
        <Border Margin="20" Background="#363636" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Регистрация" 
                           FontSize="30" 
                           Margin="5"/>
                <TextBox x:Name="textBoxName" 
                         materialDesign:HintAssist.Hint ="Name" 
                         Margin="10"/>
                <TextBox x:Name="textBoxEmail" 
                         Margin="10" 
                         materialDesign:HintAssist.Hint ="Email"/>
                <TextBlock Text="Пол" 
                         Margin="10" Foreground="#60FFFFFF"/>
                
                <StackPanel
                  Margin="4"
                  Orientation="Horizontal">
                    <RadioButton
                        HorizontalAlignment="Center"
                        Margin="4"
                        IsChecked="True"
                        Style="{StaticResource MaterialDesignTabRadioButton}">
                        <StackPanel>
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                Kind="GenderMale" />
                            <TextBlock
                                Margin="0,4,0,0"
                                Text="Муж" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton
                        HorizontalAlignment="Center"
                        Margin="4"
                        IsChecked="False"
                        Style="{StaticResource MaterialDesignTabRadioButton}">
                        <StackPanel>
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                Kind="GenderFemale" />
                            <TextBlock
                                Margin="0,4,0,0"
                                Text="Жен" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
                <TextBlock Text="Возраст"
                           Margin="10,5,0,10" Foreground="#60FFFFFF"/>
                
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="sld"
                            Maximum="100"
                            Minimum="0"
                            Value="18"
                            HorizontalAlignment="Left"
                            MinWidth="280"
                            IsSnapToTickEnabled = "True"
                            TickFrequency = "1"
                            Panel.ZIndex="2"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            ></Slider>
                    <TextBlock Text="{Binding ElementName=sld, Path=Value, Mode=TwoWay}"
                               x:Name="textBoxAge"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"/>
                </Grid>

                <PasswordBox x:Name="textBoxPassword" 
                             Margin="10" 
                             materialDesign:HintAssist.Hint ="Password"/>
                <PasswordBox Name="textBoxRepeatPassword" 
                             Margin="10" 
                             materialDesign:HintAssist.Hint ="Repeat password"/>
                <Button Content="Регистрация" 
                        Click="ButtonRegistration_Click"
                        Background="#66E39C"
                        MinHeight="40"
                        materialDesign:ButtonAssist.CornerRadius ="10"
                        Margin="10,0,10,0"/>
                <TextBlock Text="Войти как гость" 
                            Cursor="Hand" 
                            MaxWidth="1000" 
                            Foreground="#66E39C" 
                            HorizontalAlignment="Left" 
                            MouseLeftButtonDown="ButtonReturnToAuentification_Click"
                            Margin="10,5,0,0"
                            FontSize="15"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
