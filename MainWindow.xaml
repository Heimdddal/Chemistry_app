<Window x:Class="Chemistry_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry_app"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400" Background="#242424">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="2" Margin="30,40,30,40" CornerRadius="30" Background="#363636">
            <Frame Padding="40" Name = "MainFrame" NavigationUIVisibility="Hidden">

            </Frame>
        </Border>
        <StackPanel>
            <Button Content="Profile" 
                    Click="ButtonProfile_Click"/>
            
            <Button Content="Theory"
                    Click="ButtonTheory_Click" />

            <Button Content="Mendeleev Table"
                    Click="ButtonMendeleevTable_Click" />

            <Button Content="Solubillity Table"
                    Click="ButtonSolubillityTable_Click"/>

            <Button Content="Metal Activity Table"
                    Click="ButtonMetalActivityTable_Click"/>

            <Button Content="Settings"
                    Click="ButtonSettings_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
