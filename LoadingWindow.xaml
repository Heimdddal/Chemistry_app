<Window x:Class="Chemistry_app.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry_app"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="LoadingWindow" Height="450" Width="350" Background="#242424">
    <Grid>
        <materialDesign:Card
            Background="#363636"
            Padding="4"
            Height="200"
            Width="200"
            UniformCornerRadius="14">
            <materialDesign:Card.Effect>
                <DropShadowEffect ShadowDepth="20" BlurRadius="120" Opacity="2"/>
            </materialDesign:Card.Effect>
            <ProgressBar
                Height="100"
                Width="100"
                IsIndeterminate="True"
                Foreground="{DynamicResource ActiveElements}"
                Style="{StaticResource MaterialDesignCircularProgressBar}" />
        </materialDesign:Card>
    </Grid>
</Window>
